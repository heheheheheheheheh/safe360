    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <!-- 标题样式 -->
    <style name="titleStyle" parent="android:Widget.TextView">
        <item name="android:background">#55A7D7</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
    </style>
    <!-- 设置界面条目样式 -->
    <style name="sjfd_setting_item" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableLeft">@drawable/dialog_title_default_icon</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 按钮按钮 -->
    <style name="buttonStyle" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/dialog_ok_bg</item>
        <item name="android:textColor">@color/dialog_btn_text_bg</item>
    </style>
</resources>
