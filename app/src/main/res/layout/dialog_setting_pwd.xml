<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 标题 -->

    <TextView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_title_background"
        android:drawableLeft="@drawable/dialog_title_default_icon"
        android:drawablePadding="3dp"
        android:text="初始化密码设置"
        android:textSize="16sp" />

    <!-- 密码输入框 -->

    <EditText
        android:id="@+id/et_dialog_setting_pwd_01"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码" />
    <!-- 密码验证框 -->

    <EditText
        android:id="@+id/et_dialog_setting_pwd_02"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请确认密码" />

    <!-- 按钮布局 -->

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_dialog_setting_pwd_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_ok_bg"
            android:text="确定"
            android:textColor="@color/dialog_btn_text_bg" />

        <Button
             android:id="@+id/bt_dialog_setting_pwd_cancel"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_cancel_bg"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>